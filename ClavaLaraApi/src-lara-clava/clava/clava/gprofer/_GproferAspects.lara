aspectdef GproferGetCxxFunction
	input name end
	output $func end
	
	$func = undefined;
	
	/* decode name based on gprof format */
	select function{signature == name} end
	apply
		$func = $function;
		return;
	end
	condition
		$function.hasDefinition
	end
end

aspectdef GproferGetCFunction
	input name end
	output $func end
	
	$func = undefined;
	
	select function{name} end
	apply
		$func = $function;
		return;
	end
	condition
		$function.hasDefinition
	end
end
